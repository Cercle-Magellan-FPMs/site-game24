---
import { Image } from "astro:assets";

import Layout from "@layouts/Layout.astro";

import heroImage from "@images/hero-image.png";
import dateEtLieu from "@images/date-et-lieu.png";

import Wavenet from "@images/sponsors/wavenet.png";
import Weloveat from "@images/sponsors/weloveat.png";
