import YouFM from "@images/sponsors/youfm.png";
import Walga from "@images/sponsors/walga.png";
import Noctua from "@images/sponsors/noctua.png";
import JustOneByte from "@images/sponsors/j1b.png";
import ORE from "@images/sponsors/ore.png";
import RomeoPizza from "@images/sponsors/romeopizza.png";

import LoL from "@images/jeux/lol.png";
import TM from "@images/jeux/tm.png";
import FC24 from "@images/jeux/fc24.png";
import SSBU from "@images/jeux/ssbu.png";
import MK8 from "@images/jeux/mk8.png";

const jeux = [
  {
    name: "League of Legends",
    image: LoL,
    url: "/lol",
  },
  {
    name: "TrackMania",
    image: TM,
    url: "/tm",
  },
  {
