  },
  {
    name: "Super Smash Bros. Ultimate",
    image: SSBU,
    url: "/ssbu",
  },
  {
    name: "MarioKart 8",
    image: MK8,
    url: "/mk8",
  },
];

const sponsors = [
  {
    name: "Wavenet",
    url: "https://wavenet.be/",
    image: Wavenet,
  },
  {
    name: "Weloveat",
    url: "https://weloveat.be/",
    image: Weloveat,
  },
  {
    name: "Sopra Steria",
    url: "https://soprasteria.com/",
    image: SopraSteria,
  },
  {
    name: "YouFM",
    url: "https://youfm.be/",
    image: YouFM,
  },
  {
    name: "Walga",
    url: "https://www.walga.be/",
    image: Walga,
  },
  {
    name: "Noctua",
    url: "https://noctua.at/fr/",
    image: Noctua,
  },
  {
    name: "Just One Byte",
    url: "https://j1b.be/",
    image: JustOneByte,
  },
  {
    name: "ORE",
    url: "https://www.facebook.com/ORE.UMONS/",
    image: ORE,
  },
  {
