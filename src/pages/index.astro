    image: RomeoPizza,
  },
];
---

<Layout title="Accueil">
  <main class="container mx-auto space-y-12 px-2 pt-4">
    <section
      class="relative -z-10 h-[calc(100vh_-_15rem)] overflow-hidden rounded-3xl shadow-xl"
    >
      <Image
        class="-z-10 h-full object-cover"
        src={heroImage}
        alt="Statue des deux fondateurs de la FacultÃ© polytechnique de Mons, Guibal et Devillez"
        quality={30}
        width={1920}
        height={1280}
        format="webp"
      />
      <div class="absolute inset-0 flex items-end pb-16">
        <h1
          class="mx-auto w-[100%-3rem] max-w-4xl px-8 pe-16 text-4xl font-semibold text-white shadow-black text-shadow-title"
        >
          Bienvenue au Game 24 !! ðŸŽ®
        </h1>
      </div>
    </section>
    <section
      class="mx-auto max-w-5xl space-y-2 rounded-2xl bg-white px-6 py-3 font-semibold"
    >
      <h2 class="text-5xl">Une date et un lieu !</h2>
      <Image
        class="mx-auto drop-shadow-sm"
        src={dateEtLieu}
        alt="Date et lieu du Game 24"
        quality={50}
        format="webp"
      />
    </section>
    <section
      class="mx-auto max-w-5xl space-y-6 rounded-2xl bg-white px-6 py-3 font-semibold"
      id="tournois"
    >
      <h2 class="text-5xl">Des tournois</h2>
      <div
        class="max-w-full overflow-hidden [-webkit-mask:linear-gradient(90deg,transparent,white_20%,white_80%,transparent)] [mask:linear-gradient(90deg,transparent,white_20%,white_80%,transparent)]"
      >
        <ul
          class="flex w-max animate-infinite-scroll-left gap-4 hover:[animation-play-state:paused]"
        >
          {
            [...jeux, ...jeux].map((jeu) => (
              <a
                href={jeu.url}
                class="text-nowrap rounded-2xl border-4 border-blue-600 px-6 py-4"
              >
                <Image
                  class="size-64 object-contain"
                  src={jeu.image}
                  alt={jeu.name}
                  quality={50}
                  format="webp"
                />
                {jeu.name}
              </a>
            ))
          }
        </ul>
      </div>
    </section>
    <section
      class="mx-auto max-w-5xl space-y-2 rounded-2xl bg-white px-6 py-3 font-semibold"
      id="sponsors"
    >
      <h2 class="text-5xl">Nos sponsors</h2>
      <div
        class="max-w-full overflow-hidden [-webkit-mask:linear-gradient(90deg,transparent,white_20%,white_80%,transparent)] [mask:linear-gradient(90deg,transparent,white_20%,white_80%,transparent)]"
      >
        <ul
          class="flex w-max animate-infinite-scroll-right gap-4 hover:[animation-play-state:paused]"
        >
          {
            [...sponsors, ...sponsors].map((sponsor) => (
              <li>
                <a href={sponsor.url} target="_blank" class="rounded-2xl">
                  <Image
                    class="size-64 object-contain"
                    src={sponsor.image}
                    alt={sponsor.name}
                    quality={50}
                    format="webp"
                  />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </section>
  </main>
</Layout>
