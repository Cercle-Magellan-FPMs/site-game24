---
import Facebook from "@icons/Facebook.astro";
import Instagram from "@icons/Instagram.astro";
import Mail from "@icons/Mail.astro";

import { Image } from "astro:assets";
import logo from "@images/Logo_Game24_Mono.svg";
---

<footer
  class="z-10 mt-6 bg-blue-600 text-sm text-white"
  transition:animate="none"
>
  <div
    class="container mx-auto flex flex-col gap-4 px-4 py-8 md:grid md:grid-cols-[repeat(3,_1fr)_auto]"
  >
    <div>
      <h4 class="mb-4 mt-0 font-semibold">Réseaux sociaux</h4>
      <ul class="flex flex-col gap-2">
        <li>
          <a
            class="inline-flex items-center gap-2 underline duration-150 hover:translate-x-2 hover:opacity-80"
            href="https://www.facebook.com/events/855822622960371"
          >
            <Facebook />
            Event Facebook Game 24
          </a>
        </li>
        <li>
          <a
            class="inline-flex items-center gap-2 underline duration-150 hover:translate-x-2 hover:opacity-80"
            href="https://www.facebook.com/CercleMagellan"
          >
            <Facebook />
            Cercle Magellan
          </a>
        </li>
        <li>
          <a
            class="inline-flex items-center gap-2 underline duration-150 hover:translate-x-2 hover:opacity-80"
            href="https://www.instagram.com/cercle_magellan_fpms"
          >
            <Instagram />
            Cercle Magellan
          </a>
        </li>
        <li>
          <a
            class="inline-flex items-center gap-2 underline duration-150 hover:translate-x-2 hover:opacity-80"
            href="mailto:fpms.magellan@umons.ac.be"
          >
            <Mail />
            fpms.magellan@umons.ac.be
          </a>
        </li>
      </ul>
    </div>
    <div class="h-[2px] rounded-full bg-white md:hidden"></div>
    <div>
      <h4 class="mb-4 mt-0 font-semibold">Comité Magellan 185</h4>
      <ul class="flex flex-col gap-2">
        <li>Kevin Dubrulle</li>
        <li>Hugo Lorenzoni</li>
        <li>Lucy Bogaert</li>
      </ul>
    </div>
    <div class="h-[2px] rounded-full bg-white md:hidden"></div>

    <div>
      <h4 class="mb-4 mt-0 font-semibold">© Site développé par</h4>
      <ul class="flex flex-col gap-2">
        <li>Hugo Lorenzoni</li>
        <li>Lucas Lebrun</li>
      </ul>
    </div>
    <div class="h-[2px] rounded-full bg-white md:hidden"></div>
    <Image
      class="size-48"
      src={logo}
      alt="Game 24"
      quality={30}
      format="webp"
    />
  </div>
</footer>
